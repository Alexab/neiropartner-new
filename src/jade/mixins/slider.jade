mixin slider
    // SLIDE
    a(href="javascript:void(0)" title="Лаборатория нейропротезов").slider__slide
        // Left block
        .slider__slide-left
            img(data-original="img/slider-image--1.png" alt="НейроПартнер. Лаборатория нейропротезов" title="НейроПартнер. Лаборатория нейропротезов").slider__slide-image.lazyload
        // Right block
        .slider__slide-right
            .slider__gradient
                img(data-original="img/np-slider-header.png" alt="НейроПартнер. Лаборатория нейропротезов" title="НейроПартнер. Лаборатория нейропротезов").slider__neiropartner.lazyload
            h3.slider__text Лаборатория нейропротезов
            // Blockquote
            blockquote.slider__blockquote
                p.slider__blockquote-text Воля - это то что заставляет тебя побеждать тогда, когда твой разум говорит тебе, что ты повержен
                footer.slider__blockquote-footer
                    cite.slider__blockquote-cite Карлос Кастанеда